<p id="notice"><%= notice %></p>

<div class="">
  <h2>Items in Cart</h2>
  <div>
    <h1><span id="cartcount"></span><%= cart_qty %></h1>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <div class="panel">
        <div class="panel-body">
          <% @products.each do |product| %>
          <div class="product">
            <%= image_tag( product.image, :alt => "image", :class => "img-fluid") %>
            <p><%= link_to product.name, product_path(product) %> | <%= number_to_currency product.price %>
            <%= number_to_currency product.maker %>
            <%= number_to_currency product.model %>
            <%= number_to_currency product.category %> |
            <%= number_to_currency product.sub_category %>
            <%= number_to_currency product.made_in %>
            <%= number_to_currency product.year %>
            <%= number_to_currency product.shipping %>
            <%= form_for @order_item, remote: true do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.hidden_field :quantity, value:1 %>
              <%= f.submit "Add to cart", class: "btn btn-primary" %>
            <% end %></p>
            </div>
          <% end %>
          <br>
          <br>


        </div>
    </div>
  </div>
  <div class="col-md-3">
    <%= link_to "Show Cart", products_path, id: "show_cart_link", class: "btn btn-success", remote: true %>
    <%= link_to "Hide Cart", products_path, id: "hide_cart_link", class: "btn btn-danger", remote: true %>
    <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Current Cart Items</h3>
    </div>
    <div class="panel-body" id="hideshow">
      <p><%= render "carts/cart" %></p>
    </div>
  </div>

  </div>
</div>



